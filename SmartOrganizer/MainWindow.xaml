<Window x:Class="SmartOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartOrganizer"
        Width="360" Height="260"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="True">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#222" BlurRadius="18" ShadowDepth="4"/>
        <LinearGradientBrush x:Key="PanelBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#23272F" Offset="0"/>
            <GradientStop Color="#181A20" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#BBB"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="#F55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="14" Background="{StaticResource PanelBackground}" Padding="0"
            Effect="{StaticResource DropShadowEffect}">
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header with window controls -->
            <DockPanel Grid.Row="0" LastChildFill="True" Background="#23272F" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="SmartOrganizer" Foreground="#E0E0E0" FontWeight="Bold" FontSize="15"
                           VerticalAlignment="Center" Margin="14,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button Style="{StaticResource WindowButtonStyle}" ToolTip="Minimize" Click="Minimize_Click">─</Button>
                    <Button Style="{StaticResource WindowButtonStyle}" ToolTip="Close" Click="Close_Click">✕</Button>
                </StackPanel>
            </DockPanel>
            <!-- Main content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="OrganizeDesktop_Button"
                            Width="140" Height="38"
                            Background="#2D313A"
                            BorderBrush="#3A3F4B"
                            BorderThickness="1"
                            Foreground="#E0E0E0"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Content="Organize Desktop" Click="Desktop_Click"/>
                    <Button x:Name="DDownloads_Button"
                            Width="146" Height="38"
                            Background="#2D313A"
                            BorderBrush="#3A3F4B"
                            BorderThickness="1"
                            Foreground="#E0E0E0"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Content="Organize Downloads" Click="Downloads_Button"/>
                </StackPanel>
                <Separator Margin="0,12,0,8" Background="#333" Height="1"/>
            </StackPanel>
            <!-- Loading overlay, placed as the last child to overlay everything -->
            <Grid x:Name="LoadingOverlay"
                  Background="Transparent"
                  Visibility="Collapsed"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Panel.ZIndex="100"
                  Grid.RowSpan="2">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="60" Height="60">
                        <Ellipse Width="60" Height="60" Stroke="#33FFFFFF" StrokeThickness="6"/>
                        <Ellipse Width="60" Height="60" Stroke="#FFF3F3F3" StrokeThickness="6"
                                 StrokeDashArray="0,1.5" StrokeDashCap="Round">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate" Angle="0" CenterX="30" CenterY="30"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Ellipse.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                             From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>
                    <TextBlock Text="Organizing files..." Foreground="White" FontSize="16"
                               HorizontalAlignment="Center" Margin="0,16,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
